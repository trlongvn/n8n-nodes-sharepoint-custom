{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"lib": ["ES2021"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./",
		"composite": true,
		"strict": false,
		"noImplicitAny": false,
		"useUnknownInCatchVariables": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@utils/*": ["utils/*"]
		}
	},
	"include": ["credentials/**/*", "nodes/**/*", "utils/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/test/**", "**/__tests__/**"]
}
